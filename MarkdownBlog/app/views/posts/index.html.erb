<div class="row">
    <div class="small-12 columns">

    	<br>
		<%= link_to "posts/new", class: "title-link" do%>
			<%= image_tag("icons/add186.png", size: "30x30", :title => "+ New Post", :alt => "Post +") %> <span>Add New Post </span>
		<% end %>

			<span class="swich"> View posts: 
				<%=link_to  'all', :sw => false %> |
				<%=link_to  'own', :sw => true %>
			</span>
		<div class="content">
		<% @posts.each do |post| %> 
			<% unless (params[:sw].to_s == 'true') && (post.user_id != current_user.id) %>
				<div class="post"> 

					<%=link_to  post  do%>
	  					<h2 class="post-title"><%= post.title %></h2> 
	  				<% end %>
	  				<div class="long-text">
		  				<p class="post-text">
		  					<%= markdown post.text %>
		  				</p> 
	  				</div>
	  				<hr />
		  			<div class="post-info">
		  				<%=link_to  post  do%>
		  					<%= image_tag("icons/view24.png", size: "30x30", :title => "See Post", :alt => "View Post") %>
		  				<% end %>

		  				
		  				<%= image_tag("icons/speechbubble10.png", size: "30x30", :title => "Comments", :alt => "Comments", :class => 'comments-block', :id => "cb "+post.id.to_s) %>

		  				<%= link_to  likes_path(post) do%> 
		  					<% if post.liked_by?(current_user) %>
		  						<%= image_tag("icons/heart267.png", size: "25x25", :title => "#{post.likers(User).count} people like it", :alt => "Toggle Like", :class => "add-opacity") %>
		  					<% else %>
		  						<%= image_tag("icons/heart267.png", size: "25x25", :title => "#{post.likers(User).count} people like it", :alt => "Toggle Like") %>
		  					<% end %>
		  				<% end %>
		  				
		  				<%if post.created_at.to_date == Date.today %>
		  					<span class="post-time"> today <%= post.created_at.strftime(" %H:%M") %></span> 
		  				<% else %>
		  					<span class="post-time"> <%= post.created_at.strftime(" %d %b. %Y") %></span> 
		  				<% end %>

		  				<span class="post-creater">by: <%= User.find_by_id(post.user_id).login %> | &nbsp;
		  				</span> 
		  			</div>
				</div> 

				<div class="comments-wrapper" id = "cw <%=  post.id%>">
				<div class="comments-head"> 
					
					<%= image_tag("icons/add186.png", size: "30x30", :title => "+ New Comment", :alt => "Comment +") %> <span>Add New Comment </span>
					
					<span>| Count of comments - <%=post.comments.count %></span>
				</div>

				<div class='comment-form'>
					<%= form_tag( controller: "comments" , action: 'post_comment' ) do %>	<%= hidden_field_tag(:post_id, post.id) %>
  						<%= text_area_tag(:body) %>
  						<%= submit_tag("Add") %>
					<% end %>


				</div>

				<% post.comments.each do |comment| %> 
				<div class="comment block-shadow-2">
	   				<p class="comment-text">
	   					<%= link_to "Delete", comment, controller: "comments" , action: 'remove_comment', method: :delete, data: { confirm: "Are you sure?" } %>
	   					<%= comment.body %>
	   				</p> 
	   				<hr />
	   				<div class="comment-info">
		  				<span class="comment-creater"><%= User.find_by_id(comment.user_id).login %>
		  				</span> 
		  				<span class="comment-time"><%= comment.created_at %></span> 
		  				<span class="comment-time"><%= comment.updated_at %></span> 
		  			</div>
		  		</div>	
				<% end %>
				</div> 			
			<% end %>
		<% end %>
		</div>

	</div>
</div>		
